[colors]
;background = ${xrdb:color0:#222}
background = #CC070e14
background-alt = #CC070e14
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #dfdfdf
grayout = #2a2a2a
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
green = #90EE90

[bar/bottom]
monitor = ${env:MONITOR:DVI-D-0}

width = 100%
height = 30
radius = 0
fixed-center = true 

bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 2
padding-right = 2

module-margin-left = 0
module-margin-right = 0

font-0 = Verdana:pixelsize=12;3
font-1 = FontAwesome:style=Regular:pixelsize=12;3

modules-left = temperature separator filesystem separator xwindow
modules-center = i3 
modules-right = date separator pavolume separator lock separator powermenu

[bar/bottom2]
monitor = ${env:MONITOR:DVI-I-1}

width = 100%
height = 30
radius = 0
fixed-center = true 

bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 2
padding-right = 2

module-margin-left = 0
module-margin-right = 0

font-0 = Verdana:pixelsize=12;3
font-1 = FontAwesome:style=Regular:pixelsize=12;3

modules-left = tux separator eth separator memory separator cpu 
modules-center = i3 
modules-right = date separator pavolume separator lock separator powermenu

tray-position = right
tray-padding = 1

[bar/macbook]
monitor = ${env:MONITOR:eDP1}

width = 100%
height = 30
radius = 0
fixed-center = true 

bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 2
padding-right = 2

module-margin-left = 0
module-margin-right = 0

font-0 = Verdana:pixelsize=12;3
font-1 = FontAwesome:style=Regular:pixelsize=12;3

modules-left = tux separator wifi separator battery
modules-center = i3 
modules-right = date separator pavolume separator lock separator powermenu

tray-position = right
tray-padding = 1

[module/xwindow]
type = internal/xwindow
label = %title:0:100:...%

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
mount-1 = /home

spacing = 2
format-mounted = <label-mounted>
label-mounted = %mountpoint% %percentage_used%%
label-unmounted = %mountpoint% -
label-unmounted-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery

; This is useful in case the battery never reports 100% charge
full-at = 99

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = ADP1

; If an inotify event haven't been reported in this many
; seconds, manually poll for new values.
;
; Needed as a fallback for systems that don't report events
; on sysfs/procfs.
;
; Disable polling by setting the interval to 0.
;
; Default: 5
poll-interval = 5
label-discharging =  %percentage%%

[module/bspwm]
type = internal/bspwm

label-focused = %icon% %index%
label-focused-background = #186b58
label-focused-underline= ${colors.primary}
label-focused-padding = 2

label-occupied = %icon% %index%
label-occupied-padding = 2

label-urgent = %icon% %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %icon% %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

ws-icon-default = ♟
ws-icon-0 = 1
ws-icon-1 = web;♟
ws-icon-2 = 3;
ws-icon-3 = 4
ws-icon-4 = 5
ws-icon-5 = 6
ws-icon-6 = 7

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

reverse-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 4
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %icon% %name%
label-focused-background = ${module/bspwm.label-focused-background}
label-focused-underline = #ffffff
label-focused-padding = ${module/bspwm.label-focused-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon% %name%
label-unfocused-padding = ${module/bspwm.label-occupied-padding}

; visible = Active workspace on unfocused monitor
label-visible = %icon% %name%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent =  %icon% %name%
label-urgent-background = ${module/bspwm.label-urgent-background}
label-urgent-padding = ${module/bspwm.label-urgent-padding}

ws-icon-default = ♟
ws-icon-0 = 1
ws-icon-1 = messages;
ws-icon-2 = web;
ws-icon-3 = dev;
ws-icon-4 = server;
ws-icon-5 = spotify;
ws-icon-6 = 7
ws-icon-7 = backup;
ws-icon-8 = gaming;

[module/cpu]
type = internal/cpu
interval = 20
format-prefix = "  "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = 
label = %percentage%%

[module/memory]
type = internal/memory
interval = 120.0
format-prefix = "  " 
format-prefix-foreground = ${colors.foreground-alt}
format-underline = 
label = %percentage_used%%

[module/wifi]
type = internal/network
interface = wlp3s0
interval = 3.0
udspeed-minwidth = 5
accumulate-stats = true
;   <ramp-signal>
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected = %local_ip% (%signal%% %essid%)
label-connected-foreground = ${colors.green}
label-disconnected = not connected
label-disconnected-foreground = ${colors.alert}

[module/eth]
type = internal/network
interface = enp3s0
interval = 5.0

format-connected-underline = 
label-connected = %local_ip%@%linkspeed%
label-connected-foreground = ${colors.green}

format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = %ifname%: no connection
label-disconnected-foreground = ${colors.alert}

[module/date]
type = internal/date
interval = 5

date = " %d.%m.%y"
time = %I:%M %p

format-prefix-foreground = ${colors.foreground-alt}
format-underline =

label = %date%  %time%

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-underline = #f50a4d
format-warn = <ramp> <label-warn>
format-warn-foreground = ${colors.alert}
format-warn-underline = ${self.format-underline}

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.secondary}

ramp-0 =
ramp-1 =
ramp-2 =
ramp-foreground = ${colors.foreground-alt}

[module/lock]
type = custom/text
content = ""
content-foreground = #996515
click-left = /usr/bin/i3lock -c 000000
click-middle =  /usr/bin/i3lock -c 000000
click-right = /usr/bin/i3lock -c 000000

[module/tux]
type = custom/text
content = ""

[module/powermenu]
type = custom/menu

format-spacing = 1

label-open = ""
label-open-foreground = #720000
label-close = ""
label-close-foreground = #720000
label-separator = 
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = suspend
menu-0-0-exec = systemctl suspend
menu-0-1 = reboot
menu-0-1-exec = menu-open-1
menu-0-2 = power off
menu-0-2-exec = menu-open-2
menu-1-0 = yes!
menu-1-0-exec = reboot

menu-2-0 = yes!
menu-2-0-exec = poweroff

[module/separator]
type = custom/text
content = " | "
content-foreground = ${colors.grayout}

[module/pavolume]
type = custom/script
tail = true
label = %output%
exec = ~/.config/polybar/pavolume.sh --listen
click-right = exec pavucontrol
click-left = ~/.config/polybar/pavolume.sh --togmute
scroll-up = ~/.config/polybar/pavolume.sh --up
scroll-down = ~/.config/polybar/pavolume.sh --down

